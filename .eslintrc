{
  "extends": [
    "eslint:recommended",
    "eslint-config-airbnb/base"
  ],
  "ecmaFeatures": {
    "globalReturn": true,
    "jsx": true,
    "modules": true,
    "restParams": true,
    "spread": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": true,
    "describe": true,
    "before": true,
    "it": true,
    "expect": false,
    "sinon": true
  },
  "parser": "babel-eslint",
  "plugins": [],
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
