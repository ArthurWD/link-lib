{
  "extends": [
    "eslint:recommended",
    "eslint-config-airbnb/base"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": true,
    "describe": true,
    "before": true,
    "it": true,
    "expect": false,
    "sinon": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": true,
      "jsx": true,
      "modules": true,
      "restParams": true,
      "spread": true
    }
  },
  "plugins": [],
  "rules": {
    "no-use-before-define": ["error", "nofunc"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "import/newline-after-import": "off"
  }
}
